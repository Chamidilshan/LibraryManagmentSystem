            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#180146" Offset="0"/>
                <GradientStop Color="#060606" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border CornerRadius="10"                    
