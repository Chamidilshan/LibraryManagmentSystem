                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#FFDA34AE"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#88DA34AE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
